<% wrap_layout :base do %>
  <section id="main-content" class="col-md-9">
    <article class="post">
      <%= partial 'partials/article-meta', locals: {
        article: current_page.data,
        cover_image: current_page.data.cover_image,
        path: current_page.path
      } %>

      <%= yield %>

      <%= partial 'partials/article-tags', locals: {tags: current_page.data.tags.split(/,[\s]*/)} %>

      <div class="back">
        <i class="icon-reply"></i> <%= link_to 'Go back', '/' %>
      </div>
    </article>

    <% unless current_page.data.disable_comments %>
      <h3>Comments</h3>

      <div id="disqus_thread"></div>
      <noscript>Please enable JavaScript to view the
        <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      <a href="http://disqus.com" class="dsq-brlink">comments powered by
        <span class="logo-disqus">Disqus</span></a>
    <% end %>
  </section>
<% end %>
